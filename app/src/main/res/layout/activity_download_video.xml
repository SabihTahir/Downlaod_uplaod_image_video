<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".download_video">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/videoNameET"
        android:maxLength="20"
        android:maxLines="1"
        android:hint="Enter the video name to download"/>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/downloadVV"
        android:layout_below="@id/videoNameET"
        android:layout_margin="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/downloadVideoBtn"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Download video"
        android:layout_below="@id/downloadVV"
        android:layout_marginTop="5dp"/>

</RelativeLayout>